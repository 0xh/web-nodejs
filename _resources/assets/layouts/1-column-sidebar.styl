.layout__one-column-sidebar
	position relative
	min-height 100%
	min-width 1150px
	padding-top 60px
	background #dce3e5

	> main
		lost-center 1150px
		padding 20px 0 0 0

		> .main-content
			lost-column 17/24
			lost-column-gutter 15px
			margin-right 0

			> .bg-image
				height 325px
				overflow hidden

				img
					width 100%

		> .sidebar
			lost-column 7/24
			lost-column-gutter 15px
			margin 0
			height 100px

			> h3
				margin 40px 0 20px 0
				line-height 24px
				font-size 20px
				color $color-gray-dark

			> p
				margin 0 0 30px 0
				line-height 22px
				font-size 15px

				&:last-child
					margin 0

	> .bottom-content
		lost-center 1150px
		margin-top 30px
