.drop-target
	position relative
	background white

	i
		position relative
		top 2px

.drop-content
	display none

.drop-element
	position absolute
	display none
	width 150px
	opacity 0.999
	transform translateZ(0)
	// transition opacity 360ms

	.drop-content
		position relative
		display block
		width 100%
		font-size 13px
		color $color-text
		background $color-gray-lighter
		box-shadow -2px 2px 5px 1px rgba(0,0,0,0.03)
		border-left 1px solid color-gray-lighter

		ul
			position relative
			display block
			padding 0
			margin 0
			line-height 38px
			list-style none

		li
			height 38px
			margin 0
			color $color-text

			&:hover
				background $color-gray-light

		a
			display inline-block
			height 38px
			width 100%
			padding 0 15px
			color $color-text
			text-decoration none
			white-space nowrap

			&:hover
				text-decoration none


.drop-enabled
	&.drop-target
		color #fff
		background $color-primary
		box-shadow -2px -2px 5px 3px rgba(0,0,0,0.1)
		z-index 1

	&.drop-element
		display block
