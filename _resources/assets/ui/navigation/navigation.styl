/* -----------------------------
	:: Desktop Styles ::
------------------------------ */

@media only screen and (min-width : 992px)
	.main-nav
		ul:not(:first-child)
			float right

		li
			&:not(.logo)
				display inline

			&.logo a
				margin-right 50px

		a
			font-size 15px
			font-weight 600

		.main-nav__toggle
			display none
