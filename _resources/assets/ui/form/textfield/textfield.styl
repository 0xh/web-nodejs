.textfield
	position relative
	font-size 14px
	border 1px solid $color-gray

	.textfield__input
		width 100%
		height 75px
		padding-left 30px
		padding-right 30px
		color $color-text
		placeholder-color rgba(0, 0, 0, 0.65)
		border none

		&[disabled]
		&[readonly]
			cursor not-allowed
			background $color-gray-lighter

		&--small
			height 40px
			padding 10px 25px

	.textfield__icon
		position absolute
		top 50%
		transform translateY(-50%)
		right 15px
		color $color-gray

	&&--error .textfield__input
		background-color lighten($color-error, 90%)

	&&--error .label
		color $color-error

	&&--warning .textfield__input
		background-color lighten($color-warning, 90%)

	&&--with-label .label
		position absolute
		margin 15px 0 0 30px

	&&--with-label .textfield__input
		padding-top 25px

