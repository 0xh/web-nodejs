.select
	position relative
	font-size 14px
	color rgba(169, 169, 169, 0.65)
	background #fff
	border 1px solid $color-gray

	&&--selected
		color $color-text

	.select__placeholder
		display block
		line-height 75px
		padding-left 30px
		padding-right 30px
		margin 0
		overflow hidden

		&:after
			position absolute
			font-family 'Nucleo Outline'
			content '\ee41'
			margin-left 4px
			color $color-primary

	.select__input
		position absolute
		top 0
		left 0
		width 100%
		height 75px
		color $color-text
		opacity 0
		border none
		background none
		z-index 1

		option
			padding 3px 5px

	&&--with-label .label
		position absolute
		margin 15px 0 0 30px

	&&--with-label .select__placeholder
		padding-top 25px
		line-height 50px

	&&--error
		background-color lighten($color-error, 90%)

	&&--error .label
		color $color-error

