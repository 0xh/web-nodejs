.textarea
	position relative
	font-size 14px
	border 1px solid $color-gray

	.textarea__input
		width 100%
		height 125px
		padding-left 30px
		padding-right 30px
		color $color-text
		placeholder-color rgba(0, 0, 0, 0.65)
		border none

		&[disabled]
		&[readonly]
			cursor not-allowed
			background $color-gray-lighter

	&&--with-label .label
		position absolute
		margin 20px 0 0 30px

	&&--with-label .textarea__input
		padding-top 45px

	.form fieldset &
		lost-column 1/1
