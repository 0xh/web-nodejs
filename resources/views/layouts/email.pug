      /* -------------------------------------
      GLOBAL
      A very basic CSS reset
      ------------------------------------- */
      * {
        margin: 0;
        font-family: Tahoma, "Helvetica Neue", Helvetica, Arial, sans-serif;
        box-sizing: border-box;
        font-size: 13px;
        color: #2e1e2e;
      }
      img {
        max-width: 100%;
      }
      body {
        background-color: #f5f5f5;
        -webkit-font-smoothing: antialiased;
        -webkit-text-size-adjust: none;
        width: 100% !important;
        height: 100%;
        line-height: 24px;
      }
      /* Let's make sure all tables have defaults */
      table  {
        width: 100%;
        border-spacing: 0;
      }
      table td {
        vertical-align: top;
      }
      table th {
        font-weight: normal;
        color: #3f537f;
        text-align: left;
      }
      /* -------------------------------------
      TYPOGRAPHY
      ------------------------------------- */
      h1, h2, h3, h4 {
        font-family: "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
        margin: 0;
        line-height: 1.2em;
        font-weight: 400;
        color: #003057;
      }
      h1 {
        font-size: 24px;
        margin: 25px 0;
        /*margin: 25px 0 35px 0;*/
        /*border-bottom: solid 2px #f5f5f5;*/
        text-align: center;
      }
      h2 {
        font-size: 18px;
      }
      h3 {
        font-size: 16px;
      }
      h4 {
        padding: 10px 0 0 0;
        margin: 0;
        font-size: 15px;
      }
      strong {
        color: #2e2e2e;
        font-weight: 600;
      }
      p {
        margin: 0 !important;
        padding: 0 !important;
        line-height: 18px;
      }
      ul, ol {
        padding: 0;
        margin: 0 0 0 20px;
        font-weight: normal;
      }
      ul li,
      ol li {
        margin: 3px 0 3px 0;
      }
      a {
        text-decoration: none;
        color: #4285F4;
      }
      p > a {
        text-decoration: underline;
      }
      small {
        color:#bbb;
        font-size: 10px;
      }
      .uppercase {
        text-transform: uppercase;
      }
      .capitalize {
        text-transform: capitalize;
      }
      /* -------------------------------------
      BODY & CONTAINER
      ------------------------------------- */
      .body-wrap {
        width: 100%;
        /*padding: 10px 2px;*/
      }
      .container {
        display: block !important;
        max-width: 600px !important;
        margin: 0 auto !important;
        /* makes it centered */
        clear: both !important;
      }
      .content-wrap {
        /*padding: 20px 0 0 0;*/
        overflow: hidden;
      }
      .content {
        display: block;
        max-width: 600px;
        /*padding: 4px;*/
        margin: 10px 0 0 0;
        border-radius: 3px;
        background: #f5f5f5;
      }
      .content-block {
        line-height: 18px;
        padding: 0 35px 40px 35px;
      }
      .content-block p {
        line-height: 22px;
      }
      .content-block.wide {
        padding: 0 0 40px 0;
      }
      .content-block-title {
        padding: 0 35px;
      }
      .content-block-title h1,
      .content-block-title h2,
      .content-block-title h3 {
        margin: 0 0 15px 0;
        padding: 0 0 15px 0;
        border-bottom: solid 1px #f5f5f5;
        text-align: left;
      }
      .content-block.last {
        padding-bottom: 0;
      }
      /* -------------------------------------
      HEADER, FOOTER, MAIN
      ------------------------------------- */
      .main {
        background: #fff;
        border: 1px solid #e9e9e9;
        border-radius: 3px;
      }
      .header {
        width: 100%;
        margin: 25px 0;
        text-align: center;
      }
      .header .logo {
        height: 50px;
        margin: auto;
      }
      .footer {
        display: block !important;
        max-width: 600px !important;
        padding: 10px 0;
        margin: auto;
        text-align: justify;
        line-height: 10px;
      }
      /* -------------------------------------
      TABLES
      ------------------------------------- */
      table.table-list td {
        height: 20px;
        vertical-align: top;
        text-align: left;
      }
      table.table-list td:first-child {
        width: 20px;
      }
      table.grid {
        background: #fff;
      }
      table.grid th,
      table.grid td {
        padding: 7px 0;
        border-bottom: solid 1px #f5f5f5;
      }
      table.details {
        width: 100%;
        /*padding: 30px 0;*/
        margin: 0;
        color: #003057;
        background: #F2FBFF;
        border-top: 1px solid #D4F2FF;
        border-bottom: 1px solid #D4F2FF;
      }
      table.details th {
        margin: 0;
        padding: 30px 0 10px 0;
        text-align: center;
        text-transform: uppercase;
        font-size: 12px;
        color: #232324;
      }
      table.details td {
        margin: 0;
        padding: 0 0 30px 0;
        font-size: 17px;
        color: #003057;
      }
      /*.details th:first-child { border-right: 1px solid #D4F2FF; }*/
      .details th:last-child { border-left: 1px solid #D4F2FF; }
      /*.details td:first-child { border-right: 1px solid #D4F2FF; }*/
      .details td:last-child { border-left: 1px solid #D4F2FF; }
      table.details .link a {
        color: #003057;
        font-size: 16px;
        border: none;
      }
      table.details.details-secondary { background: #FAFAFA; }
      .details.details-secondary td { font-size: 12px; }
      .details.details-secondary th:first-child { border-right: 1px solid #e9e9e9; }
      .details.details-secondary th:last-child { border-left: 1px solid #e9e9e9; }
      .details.details-secondary td:first-child { border-right: 1px solid #e9e9e9; }
      .details.details-secondary td:last-child { border-left: 1px solid #e9e9e9; }
      /* -------------------------------------
      BUTTONS
      ------------------------------------- */
      table.btn-wide {
        text-align: center;
        background: #fff;
        border: 1px solid #003057;
        overflow: hidden;
      }
      table.btn-wide td {
        padding: 10px 0;
      }
      table.btn-wide a {
        display: block;
        width: 100%;
        color: #003057;
        font-size: 14px;
        border: none;
      }
      table.btn-cta {
        width: auto;
        text-align: center;
        background: #e9e9e9;
        /*border: 1px solid #D4F2FF;*/
        overflow: hidden;
      }
      table.btn-cta td {
        padding: 20px;
      }
      table.btn-cta a {
        display: block;
        width: 100%;
        color: #2e1e2e;
        font-size: 15px;
        border: none;
      }
      table.btn-cta-wide {
        text-align: center;
        background: #F2FBFF;
        border-bottom: 1px solid #D4F2FF;
        overflow: hidden;
      }
      table.btn-cta-wide td {
        padding: 30px 10px;
      }
      table.btn-cta-wide a {
        color: #003057;
        font-size: 16px;
        border: none;
      }
      /* -------------------------------------
      RESPONSIVE AND MOBILE FRIENDLY STYLES
      ------------------------------------- */
      @media only screen and (max-width: 640px) {
        body {
          padding: 0 !important;
        }
        h1, h2, h3, h4 {
          font-weight: 800 !important;
          margin: 20px 0 5px !important;
        }
        h1 {
          font-size: 22px !important;
        }
        h2 {
          font-size: 18px !important;
        }
        h3 {
          font-size: 16px !important;
        }
        .container {
          padding: 0 !important;
          width: 100% !important;
        }
        .content {
          padding: 0 !important;
        }
        .content-wrap {
          padding: 0px !important;
        }
      }

