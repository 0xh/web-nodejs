extends ../layouts/email

block vars
  - title = 'Contactformulier aanvraag'

block content
  tr
    td.content-block.wide
      table.details(width='100%', cellpadding='0', cellspacing='0')
        thead
          th(width='50%', align='center') Contactpersoon
          th(width='50%', align='center') Telefoonnummer
        tbody
          tr
            td(align='center')= name
            td(align='center')= phone
  tr
    td.content-block
      span(style='white-space: pre-wrap;')= message

